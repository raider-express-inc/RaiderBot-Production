# RaiderBot Foundry Configuration
# Copy this to .env and fill in your values

# Foundry Credentials (from Developer Console)
FOUNDRY_CLIENT_ID="your-client-id-here"
FOUNDRY_CLIENT_SECRET="your-client-secret-here"
FOUNDRY_URL="https://raiderexpress.palantirfoundry.com"
FOUNDRY_AUTH_TOKEN=""

# RaiderBot API Configuration
RAIDERBOT_API_URL="https://raiderbot-production.up.railway.app"
RAIDERBOT_API_KEY="your-raiderbot-api-key"

# AIP Agent Configuration
AIP_AGENT_ENABLED=true
AIP_AGENT_WORKSPACE_RID="ri.workshop.main.workspace.your-workspace-rid"

# Machinery Configuration
MACHINERY_ENABLED=true
MACHINERY_DEFAULT_TIMEOUT=300

# Foundry Branching
BRANCHING_ENABLED=true
BRANCHING_AUTO_MERGE=false
BRANCHING_TEST_TIMEOUT=600

# Monitoring
MONITORING_ENABLED=true
ALERT_EMAIL="your-email@example.com"
SLACK_WEBHOOK_URL=""

# Development Settings
DEBUG=false
LOG_LEVEL="INFO"
ENVIRONMENT="production"

# Sema4.ai Configuration
SEMA4_API_KEY=your_sema4_api_key_here
SEMA4_ENDPOINT=https://api.sema4.ai/v1

# AIP Studio Configuration  
AIP_AGENT_RID=your_agent_rid_here
FOUNDRY_WORKSPACE_RID=your_workspace_rid_here

# Continue.dev Configuration
OPENAI_API_KEY=your_openai_key_for_continue_dev

# Audit Configuration
AUDIT_LEVEL=comprehensive
AUDIT_RETENTION_DAYS=365

# External Orchestrator Configuration
ORCHESTRATOR_MODE=multi_agent
AGENT_COORDINATION_TIMEOUT=300

# GitHub MCP Server
GITHUB_TOKEN=your_github_token_here
GITHUB_API_URL=https://api.github.com

# AWS MCP Server  
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Slack MCP Server
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# Zapier MCP Server
ZAPIER_API_KEY=your_zapier_api_key
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url
MCP_ZAPIER_ENABLED=true

# Docker/Kubernetes MCP Server
DOCKER_HOST=unix:///var/run/docker.sock
KUBECONFIG=/home/ubuntu/.kube/config

# Master Orchestration
MCP_ORCHESTRATOR_ENABLED=true
MCP_LOG_LEVEL=INFO
